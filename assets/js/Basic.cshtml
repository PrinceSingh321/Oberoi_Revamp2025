                        img.src = srcs[sizes.length - 1].trim();
                    }
                    console.log("no match - " + srcs[sizes.length - 1].trim());
                }
            }
        }

        fnLoadDeviceSpecificImages();

        window.addEventListener('resize', function () {
            fnLoadDeviceSpecificImages();
        });

